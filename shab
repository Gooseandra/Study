#include <iostream>
#include <math.h>
using namespace std;

void output(string myOutput) {
	cout << myOutput << endl;
}
void output(int myOutput) {
	cout << myOutput << endl;
}
void output(double myOutput) {
	cout << myOutput << endl;
}
void output(float myOutput) {
	cout << myOutput << endl;
}
int input(int myInput, string description) {
	output(description);
	cin >> myInput;
	return myInput;
}
float input(float myInput, string description) {
	output(description);
	cin >> myInput;
	return myInput;
}
char input(char myInput, string description) {
	output(description);
	cin >> myInput;
	return myInput;
}
string input(string myInput, string description) {
	output(description);
	cin >> myInput;
	return myInput;
}


void clean()
{
	system("pause");
	system("cls");
}

int menu() {
		int WorkNumber;
		setlocale(LC_ALL, "Russian");
		cout << "1. \n"
			<< "2. \n"
			<< "3. \n"
			<< "4. \n"
			<< "5. \n"
			<< "6. \n"
			<< "7. \n"
			<< "Выберете номер желаемой работы или любой иной символ для завершения работы: ";
		cin >> WorkNumber;
		switch (WorkNumber)
		{
		case 1:
			break;
		case 2:
			break;
		case 3:
			break;
		case 4:
			break;
		case 5:
			break;
		case 6:
			break;
		case 7:
			break;
		default:
			return 0;
		}
}

int main()
{
	while (1)
		if (menu() == 0)
			return 0;
}
